root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
# indent_style = space
# indent_size = 4

[*.{js,cjs,ts}]
indent_style = tab
indent_size = 4
max_line_length = 96

[*.{jsx,tsx}]
indent_style = tab
indent_size = 4
max_line_length = 110

[*.json]
indent_style = tab
indent_size = 4

[*.go]
max_line_length = 96
indent_style = tab

[*.move]
max_line_length = 96

[*.sql]
indent_style = tab

[*.{md,rst}]
trim_trailing_whitespace = false

[*.{html,mako,less,org}]
indent_style = tab

[*.yml]
indent_style = space
